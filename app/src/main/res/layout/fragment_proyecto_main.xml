<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:focusableInTouchMode="false"
    android:focusedByDefault="false"
    android:background="@drawable/image222223333"
    tools:context="proyecto.ProyectoMain">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:focusedByDefault="true">

            <EditText
                android:id="@+id/etTituloProyectoMain"
                style="@style/ShadowsProyectoLetters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="48dp"
                android:background="#00000000"
                android:elevation="10dp"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/montheavydemo"
                android:inputType="text|textMultiLine"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="29sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivPortadaProyectoMain" />

            <ImageView
                android:id="@+id/ivPortadaProyectoMain"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:backgroundTint="#C1C1C1"
                android:backgroundTintMode="multiply"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etTextoCompletoProyectoMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:background="@drawable/rectangle_shape"

                android:editable="false"
                android:elevation="1dp"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/roboto_medium"
                android:inputType="text|textMultiLine"
                android:textColor="#3C0733"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/carouselView" />

            <EditText
                android:id="@+id/etTextoResumenProyectoMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:background="@drawable/rectangle_shape"

                android:editable="false"
                android:elevation="1dp"
                android:ems="10"
                android:enabled="false"

                android:fontFamily="@font/roboto_medium"
                android:inputType="text|textMultiLine"
                android:textColor="#3C0733"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivPortadaProyectoMain" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:text="Creador :"
                android:textAlignment="textStart"
                android:textColor="#3C0733"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivPortadaProyectoMain" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Genero :"
                android:textAlignment="textStart"
                android:textColor="#3C0733"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Status :"
                android:textAlignment="textStart"
                android:textColor="#3C0733"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Plataforma :"
                android:textAlignment="textStart"
                android:textColor="#3C0733"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <EditText
                android:id="@+id/etStatusProyectoMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:ems="10"
                android:enabled="false"
                android:inputType="text|textMultiLine"
                android:textAlignment="textStart"
                android:textColor="#3C0733"
                android:textSize="14sp"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/etGeneroProyectoMain" />

            <EditText
                android:id="@+id/etPlataformaProyectoMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:ems="10"
                android:enabled="false"
                android:inputType="text|textMultiLine"
                android:textAlignment="textStart"
                android:textColor="#3C0733"
                android:textSize="14sp"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/etCreadorProyectoMain" />

            <EditText
                android:id="@+id/etCreadorProyectoMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="#00000000"
                android:ems="10"
                android:enabled="false"
                android:inputType="text|textMultiLine"
                android:textAlignment="textStart"
                android:textColor="#3C0733"
                android:textSize="14sp"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/ivPortadaProyectoMain" />

            <EditText
                android:id="@+id/etGeneroProyectoMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:ems="10"
                android:enabled="false"
                android:inputType="text|textMultiLine"
                android:textAlignment="textStart"
                android:textColor="#3C0733"
                android:textSize="14sp"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/etPlataformaProyectoMain" />

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="28dp"
                app:fillColor="#FFFFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
                app:pageColor="#00000000"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp" />

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etTextoResumenProyectoMain">

                <VideoView
                    android:id="@+id/vvProyectoMain"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="0dp" />
            </FrameLayout>

            <Button
                style="@style/BotonesNormal"
                android:id="@+id/btnDevLogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="172dp"
                android:background="@drawable/botones"

                android:layout_marginEnd="20dp"
                android:text="Devlogs"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnActualizarProyecto"
                style="@style/BotonesNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="236dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/botones"
                android:text="Actualizar"
                android:textAlignment="center"

                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnAceptarActualizarMiProyecto"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:layout_marginStart="304dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/botones"
                android:src="@drawable/ic_check_circle_grren_24dp"
                android:textAlignment="textStart"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnActualizarProyecto" />

            <ImageButton
                android:id="@+id/btnCancelarActualizarMiProyecto"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/botones"
                android:textAlignment="textStart"
                android:src="@drawable/ic_cancel_black_24dp"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/btnAceptarActualizarMiProyecto"
                app:layout_constraintTop_toBottomOf="@+id/btnActualizarProyecto" />

            <VideoView
                android:id="@+id/vvTrailerMiProyecto"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginTop="25dp"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etTextoCompletoProyectoMain" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>