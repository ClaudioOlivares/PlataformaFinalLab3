<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivImagenDevLog"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#CC7A96"
        android:backgroundTintMode="multiply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTituloDevlog"
        style="@style/ShadowsProyectoLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:elevation="8dp"
        android:fontFamily="@font/montheavydemo"

        android:textColor="#FFFFFF"
        android:textSize="37sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivImagenDevLog" />

    <Button
        android:id="@+id/btnActualizarDevlog"
        android:layout_width="98dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        style="@style/BotonesNormal"
        android:background="@drawable/botones"
        android:textAlignment="center"
        android:text="Actualizar"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivImagenDevLog" />

    <Button
        android:id="@+id/btnBorrarDevLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        style="@style/BotonesNormal"
        android:background="@drawable/botones"
        android:text="Borrar"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnActualizarDevlog" />
</androidx.constraintlayout.widget.ConstraintLayout>